// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build functor",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "functor",
                "functor.c",
                "main.c",
                "rita.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run functor",
            "type": "shell",
            "command": "./functor",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
